<div id="policy-generator">
    <table class="table actions-wrapper">
        <thead>
            <tr>
                <th class="allow" i18n:translate="">ALLOW</th>
                <th class="deny" i18n:translate="">DENY</th>
                <th class="actions">&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            <metal:block tal:repeat="actions_ns policy_actions">
                <tr tal:define="namespace actions_ns.name">
                    <td class="allow">
                        <a><i class="fi-check"></i></a>
                    </td>
                    <td class="deny">
                        <a><i class="fi-x"></i></a>
                    </td>
                    <td class="actions">
                        <div class="expando"
                             ng-init="${namespace}Expanded = false" ng-cloak="">
                            <strong class="title" >
                                <a ng-click="${namespace}Expanded = !${namespace}Expanded">
                                    <i class="fi-plus" ng-show="!${namespace}Expanded"></i>
                                    <i class="fi-minus" ng-show="${namespace}Expanded"></i>
                                    &nbsp;<span i18n:translate="">${actions_ns.label}</span>
                                </a>
                            </strong>
                        </div>
                    </td>
                </tr>
                <tr tal:define="namespace actions_ns.name" tal:repeat="action actions_ns.actions"
                    ng-show="${namespace}Expanded">
                    <td class="allow">
                        <a><i class="fi-check tick"></i></a>
                    </td>
                    <td class="deny">
                        <a><i class="fi-x tick"></i></a>
                    </td>
                    <td class="actions">
                        <span class="spacer">&nbsp;</span>${action}
                    </td>
                </tr>
            </metal:block>
        </tbody>
    </table>
</div>

