<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/scalinggroup.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('scalinggroups')}"
               data-tooltip="" title="Back to scaling groups" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Scaling Group</span> ${scaling_group.name if scaling_group else ''}
        </h3>
        <dl class="sub-nav" id="scalinggroup-subnav">
            <dd><a href="${request.route_url('scalinggroup_view', id=scaling_group.name)}" i18n:translate="">Scaling Group</a></dd>
            <dd><a href="${request.route_url('scalinggroup_instances', id=scaling_group.name)}">Instances</a></dd>
            <dd><a href="${request.route_url('scalinggroup_alarms', id=scaling_group.name)}" i18n:translate="">Alarms</a></dd>
            <dd class="active"><a href="#" i18n:translate="">Policies</a></dd>
        </dl>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />

        <div class="large-8 columns">
            <div class="panel gridwrapper has-title">
                <h6 class="title">
                    <span i18n:translate="">Policies for scaling group</span>
                    <strong>${scaling_group.name}</strong>
                </h6>
                <div class="tile add" id="add-policy">
                    <a href="#" data-reveal-id="add-policy-modal">
                        <div class="plus">+</div>
                        <div i18n:translate="">Add a policy</div>
                    </a>
                </div>
                <div class="tile item" tal:repeat="policy policies">
                    <div class="header">
                        <strong><a href="#">${policy.name}</a></strong>
                        <a class="tiny secondary button dropdown right"
                           data-reveal-id="delete-policy-modal"><i class="icon fi-minus-circle"></i></a>
                    </div>
                    <div class="content"
                         tal:define="scale_text scale_down_text if policy.scaling_adjustment < 0 else scale_up_text;
                                     scale_type ' instances' if policy.adjustment_type == 'ChangeInCapacity' else '%'">
                        <strong i18n:translate="">Policy:</strong><br/>
                        ${scale_text} ${abs(policy.scaling_adjustment)}${scale_type}<br />
                        <br />
                        <strong i18n:translate="">Alarms:</strong><br/>
                        ${', '.join([alarm.name for alarm in policy.alarms])}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</metal:block>

