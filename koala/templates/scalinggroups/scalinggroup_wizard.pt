<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/scalinggroup_wizard.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap" ng-app="ScalingGroupWizard" ng-controller="ScalingGroupWizardCtrl"
         ng-init="initController()">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('scalinggroups')}"
               data-tooltip="" title="Back to scaling groups" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Create Scaling Group</span>
        </h3>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />
        <div class="large-8 columns" tal:define="_ import: pyramid.i18n.TranslationString">
            <div class="wizard has-title">
                <h6 class="title" i18n:translate="">Create Scaling Group</h6>
                <form action="${request.route_url('scalinggroup_create')}" id="scalinggroup-wizard-form"
                      method="post" data-abide="abide">
                    ${structure:create_form['csrf_token']}
                    <dl class="tabs" data-tab="">
                        <dd class="active">
                            <a id="tabStep1" href="#step1">
                                <span class="cir">1</span> <b>General</b>
                            </a>
                        </dd>
                        <dd>
                            <a id="tabStep2" href="#step2">
                                <span class="cir">2</span> <b>Tags</b>
                            </a>
                        </dd>
                        <dd>
                            <a id="tabStep3" href="#step3">
                                <span class="cir">3</span> <b>Membership</b>
                            </a>
                        </dd>
                        <dd>
                            <a id="tabStep4" href="#step4">
                                <span class="cir">4</span> <b>Policies</b>
                            </a>
                        </dd>
                    </dl>
                    <div class="tabs-content">
                        <!--! Step 1: General tab content -->
                        <div class="content active" id="step1">
                            ${panel('form_field', field=create_form['name'])}
                            ${panel('form_field', field=create_form['launch_config'])}
                            ${panel('form_field', field=create_form['min_size'])}
                            ${panel('form_field', field=create_form['desired_capacity'])}
                            ${panel('form_field', field=create_form['max_size'])}
                        </div>
                        <!--! Step 2: Tags tab content -->
                        <div class="content" id="step2">
                            ${panel('autoscale_tag_editor', tags=[])}
                        </div>
                        <!--! Step 3: Membership tab content -->
                        <div class="content" id="step3">
                            ${panel('form_field', field=create_form['health_check_type'])}
                            ${panel('form_field', field=create_form['health_check_period'])}
                            ${panel('form_field', field=create_form['availability_zones'])}
                        </div>
                        <!--! Step 4: Advanced tab content -->
                        <div class="content" id="step4">
                            <!--! TODO: Insert policy editor widget here -->
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                </form>
            </div>
        </div>
        <div class="large-4 columns summary" ng-cloak="">
            <h5 i18n:translate="" class="title">Summary</h5>
            <div class="section">
                <!--! TODO: Summary here -->
            </div>
        </div>
    </div>
</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_url('koala:static/js/pages/scalinggroup_wizard.js')}"></script>
</div>

</metal:block>

