<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <style type="text/css">
        #desired_capacity, #max_size, #min_size { width: 3rem; }
    </style>
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('scalinggroups')}"
               data-tooltip="" title="Back to scaling groups" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Scaling Group</span> ${scaling_group.name if scaling_group else ''}
        </h3>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />

        <div class="large-7 columns"
            tal:define="readonly True if scaling_group else False;">
            <div class="panel has-title">
                <h6 class="title">
                    <span tal:condition="scaling_group">
                        <span i18n:translate="">Properties of scaling group</span>
                        <strong>${scaling_group.name }</strong>
                    </span>
                    <span tal:condition="not scaling_group" i18n:translate="">
                        Error 
                    </span>
                </h6>
                <form action="${request.route_url('scalinggroup_update')}" method="post" data-abide="abide">
                    ${structure:edit_form['csrf_token']}
                    <div tal:condition="scaling_group">
                        <div class="row controls-wrapper readonly">
                            <div class="small-4 columns"><label i18n:translate="">Name</label></div>
                            <div class="small-8 columns value">${scaling_group.name if scaling_group.name else ''}</div>
                        </div>
                        ${panel('form_field', field=edit_form['launch_config'])}
                        <div class="row controls-wrapper readonly">
                            <div class="small-4 columns"><label i18n:translate="">Availability Zones</label></div>
                            <div class="small-8 columns value">${', '.join(scaling_group.availability_zones)}</div>
                        </div>
                        ${panel('form_field', field=edit_form['desired_capacity'], maxlength=2)}
                        ${panel('form_field', field=edit_form['max_size'], maxlength=2)}
                        ${panel('form_field', field=edit_form['min_size'], maxlength=2)}
                        <div class="row controls-wrapper readonly">
                            <div class="small-4 columns"><label i18n:translate="">Placement Group</label></div>
                            <div class="small-8 columns value">${scaling_group.placement_group if scaling_group.placement_group else ''}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-4 columns"><label i18n:translate="">Termination Policies</label></div>
                            <div class="small-8 columns value">${', '.join(scaling_group.termination_policies) if scaling_group.termination_policies else ''}</div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="small-4 columns">&nbsp;</div>
                        <div class="small-8 columns field inline">
                            <button type="submit" class="button">
                                <span tal:condition="scaling_group" i18n:translate="">Save changes</span>
                            </button>
                            <a href="${request.route_url('scalinggroups')}"
                               class="cancel-link" i18n:translate="">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="large-5 columns">
            <div class="panel has-title" tal:condition="scaling_group">
                <h6 class="title" i18n:translate="">Other scaling_group actions</h6>
                <div class="row">
                    <div class="small-2 columns">&nbsp;</div>
                    <div class="small-10 columns">
                        <a class="button secondary delete" data-reveal-id="delete-scalinggroup-modal" i18n:translate="">
                            Delete scaling group
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <!--! Modal dialogs -->
        <div id="delete-scalinggroup-modal" class="reveal-modal small" data-reveal="">
            <h3 i18n:translate="">Delete scaling_group</h3>
            <p><span i18n:translate="">Are you sure you want to delete the scaling_group</span>
               <b>${scaling_group.name}</b>?</p>
            <form action="${request.route_url('scalinggroup_delete', id=scaling_group.name)}" method="post">
                ${structure:delete_form['csrf_token']}
                <input type="hidden" name="name" value="${scaling_group.name}">
                <button type="submit" class="button" i18n:translate="">Yes, delete</button>
            </form>
            <a class="close-reveal-modal">&#215;</a>
        </div>
    </div>
</div>

</metal:block>

