
<!--! Tag editor -->
<div id="tag-editor" class="row" ng-app="TagEditor" ng-controller="TagEditorCtrl" ng-init="syncTagsTextarea()">
    <div class="small-4 columns">
        <label class="right" i18n:translate="">Tags</label>
    </div>
    <div class="small-8 columns field">
        <div class="row tagentry inline controls-wrapper" tal:repeat="(tagname,tagvalue) tags.items()">
            <div class="small-4 columns">
                <input class="taginput key inline" placeholder="Key" value="${tagname}" />
            </div>
            <div class="small-4 columns">
                <input class="taginput value inline" placeholder="Value" value="${tagvalue}" />
            </div>
            <div class="small-2 columns">
                +
            </div>
        </div>
        <div class="row tagentry inline controls-wrapper">
            <div class="small-4 columns">
                <input class="taginput key" placeholder="Key" />
            </div>
            <div class="small-4 columns">
                <input class="taginput value" placeholder="Value" />
            </div>
            <div class="small-2 columns">
                +
            </div>
        </div>
        <textarea id="tags" name="tags"></textarea>
    </div>
    <script src="${request.static_url('koala:static/js/pages/tageditor.js')}"></script>
</div>
