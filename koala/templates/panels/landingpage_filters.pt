<!-- Landing page filters form -->
<div id="filters" ng-cloak="">
    <h6>Filters</h6>
    <form method="get" action="${request.current_route_url()}">
        <div class="match-condition">Match all of...</div>
        <div tal:repeat="field filters_form">
            <div tal:condition="field.short_name != 'csrf_token'" tal:omit-tag="">
                <label>${field.label}</label>
                ${structure:field()}
            </div>
        </div>
        <div>&nbsp;</div>
        <div>
            <button type="submit" class="secondary small button">Apply</button>
            &nbsp;&nbsp;&nbsp;<a href="${request.current_route_url().split('?')[0]}">Clear</a>
        </div>
    </form>
</div>
