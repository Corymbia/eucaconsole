<metal:block use-macro="main_template">

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('launchconfigs')}"
               data-tooltip="" title="Back to launch configs" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Launch Config</span> ${launchconfig.name if launchconfig else ''}
        </h3>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']"></metal:block>

        <div class="large-7 columns"
            tal:define="readonly True if launchconfig else False;">
            <div class="panel has-title">
                <h6 class="title">
                    <span tal:condition="launchconfig">
                        <span i18n:translate="">Properties of launch config</span>
                        <strong>${launchconfig.name }</strong>
                    </span>
                    <span tal:condition="not launchconfig" i18n:translate="">
                        Error 
                    </span>
                </h6>
                <form action="${request.route_url('launchconfigs')}" method="post" data-abide="abide"> 
                    <div tal:condition="launchconfig">
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Name</label></div>
                            <div class="small-9 columns value">${launchconfig.name if launchconfig.name else ''}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Instance Monitoring</label></div>
                            <div class="small-9 columns value">${launchconfig.instance_monitoring_boolean if launchconfig.instance_monitoring_boolean else ''}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Kernel ID</label></div>
                            <div class="small-9 columns value">${launchconfig.kernel_id if launchconfig.kernel_id else ''}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Key Name</label></div>
                            <div class="small-9 columns value">${launchconfig.key_name if launchconfig.key_name else ''}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Ramdisk ID</label></div>
                            <div class="small-9 columns value">${launchconfig.ramdisk_id if launchconfig.ramdisk_id else ''}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Security Groups</label></div>
                            <div class="small-9 columns value">${launchconfig.security_groups_str if launchconfig.security_groups_str else ''}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">User Data</label></div>
                            <div class="small-9 columns value">${launchconfig.user_data if launchconfig.user_data else ''}</div>
                        </div>
                    <hr>
                    <div class="row">
                        <div class="small-3 columns">&nbsp;</div>
                        <div class="small-9 columns field inline">
                            <button type="submit" class="button">
                                <span tal:condition="launchconfig" i18n:translate="">Save changes</span>
                            </button>
                            <a href="${request.route_url('launchconfigs')}"
                               class="cancel-link" i18n:translate="">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</metal:block>

