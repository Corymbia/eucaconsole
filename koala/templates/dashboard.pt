<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/dashboard.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="dashboard">
        <div class="large-3 columns">
            <div class="panel" id="instances">
                <div class="tile" id="running">
                    <h5 class="subheader">Running instances</h5>
                    <div class="content">
                        <a href="${request.route_url('instances')}?filter=apply&amp;status=Running">
                            <i class="fi-cloud icon"><em>${instances_running_count}</em></i>
                        </a>
                    </div>
                    <div class="footer">
                        <a class="button" href="#">Launch Instance</a>
                    </div>
                </div>
                <div class="tile" id="stopped">
                    <h5 class="subheader">Stopped instances</h5>
                    <div class="content">
                        <a href="${request.route_url('instances')}?filter=apply&amp;status=Stopped">
                            <i class="fi-cloud icon"><em>${instances_stopped_count}</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
                <div class="tile" id="in-scaling-group">
                    <h5 class="subheader">In scaling groups</h5>
                    <div class="content">
                        <a href="#">
                            <i class="fi-cloud icon"><em>4</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
            </div>
        </div>
        <div class="large-6 columns">
            <div class="panel row" id="volumes-snapshots">
                <div class="tile small-6 columns" id="volumes">
                    <h5 class="subheader">Volumes</h5>
                    <div class="content">
                        <a href="${request.route_url('volumes')}">
                            <i class="fi-list icon"><em>4</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
                <div class="tile small-6 columns" id="snapshots">
                    <h5 class="subheader">Snapshots</h5>
                    <div class="content">
                        <a href="#">
                            <i class="fi-list icon"><em>9</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
            </div>
            <div class="panel row" id="users-groups">
                <div class="tile small-6 columns" id="groups">
                    <h5 class="subheader">Groups</h5>
                    <div class="content">
                        <a href="#">
                            <i class="fi-torsos-all icon"><em>3</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
                <div class="tile small-6 columns" id="users">
                    <h5 class="subheader">Users</h5>
                    <div class="content">
                        <a href="#">
                            <i class="fi-torso icon"><em>24</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
            </div>
            <div class="panel row">
                <div class="tile small-6 columns" id="security-groups">
                    <h5 class="subheader">Security groups</h5>
                    <div class="content">
                        <a href="${request.route_url('securitygroups')}">
                            <i class="fi-lock icon"><em>2</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
                <div class="tile small-6 columns" id="key-pairs">
                    <h5 class="subheader">Key pairs</h5>
                    <div class="content">
                        <a href="${request.route_url('keypairs')}">
                            <i class="fi-key icon"><em>12</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
            </div>
        </div>
        <div class="large-3 columns">
            <div class="panel" id="elastic-ips">
                <div class="tile">
                    <h5 class="subheader">Elastic IPs</h5>
                    <div class="content">
                        <a href="${request.route_url('ipaddresses')}">
                            <i class="fi-thumbnails icon"><em>12</em></i>
                        </a>
                    </div>
                    <div class="footer"></div>
                </div>
            </div>
            <div class="panel" id="notifications-log">
                <h5 class="subheader">Log</h5>
            </div>
        </div>
    </div>
</div>

</metal:block>
