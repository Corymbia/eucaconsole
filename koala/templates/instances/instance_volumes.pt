<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/instance.css')}" />
</head>

<div metal:fill-slot="head_js">
    <script src="${request.static_url('koala:static/js/pages/instance.js')}"></script>
</div>

<div metal:fill-slot="main_content">

    <div class="row" id="contentwrap" tal:define="instance_name instance.tags.get('name', instance.id)">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('instances')}"
               data-tooltip="" title="Back to instances" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Instance</span> ${instance_name}
        </h3>
        <dl class="sub-nav" id="instance-subnav">
            <dd><a href="${request.route_url('instance_view', id=instance.id)}"
                    i18n:translate="">Instance</a></dd>
            <dd class="active"><a href="#" i18n:translate="">Volumes</a></dd>
        </dl>
        <!--! Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']"></metal:block>

        <div class="large-8 columns" tal:define="parse_date import: dateutil.parser.parse">
            <div class="panel has-title">
                <h6 class="title">
                    <span i18n:translate="">Volumes for instance</span>
                    <strong>${instance_name}</strong>
                </h6>
                <!--! Begin volumes -->
                <div class="tile item" tal:repeat="volume volumes">
                    <div class="header">
                        <strong>${volume.tags.get('Name', volume.id)}</strong>
                        <span class="tiny secondary button dropdown right"><i class="icon fi-minus-circle"></i></span>
                    </div>
                    <div class="content">
                        <div>
                            <span class="label" title="Size" i18n:attributes="title" data-tooltip="">GB</span>
                            ${volume.size} GB
                        </div>
                        <div>
                            <span class="label" title="Device" i18n:attributes="title" data-tooltip="">MP</span>
                            ${volume.attach_data.device}
                        </div>
                        <div>
                            <span class="label" title="Volume ID" i18n:attributes="title" data-tooltip="">ID</span>
                            ${volume.id}
                        </div>
                        <div>
                            <span class="label" title="Attach time" i18n:attributes="title" data-tooltip="">AT</span>
                            ${parse_date(volume.attach_data.attach_time).strftime(layout.date_format)}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="large-4 columns">
            <div class="help-content">
                <h5 class="title">Attach a Volume to This Instance</h5>
                <div class="topic">
                    <ol>
                        <li>Click the <strong>Attach a volume</strong> icon</li>
                        <li>
                            The <strong>Attach volume to instance</strong> dialog box will appear.
                            Select the volume you want to attach to this instance.
                        </li>
                    </ol>
                </div>
                <h5 class="title">Detach a Volume from This Instance</h5>
                <div class="topic">
                    <ol>
                        <li>
                            Click the <i class="fi-minus-circle"></i> icon for the instance you want to detach.
                        </li>
                        <li>
                            The <strong>Detach volume</strong> dialog box will appear.  Click confirm to detach the volume.
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

</div>

</metal:block>