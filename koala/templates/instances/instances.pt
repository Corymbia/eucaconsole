<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/instances.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap" ng-app="InstancesLandingPage">
        <h3 class="header" id="pagetitle">Instances</h3>
        <div class="large-2 columns" id="instances-filter">
            <div metal:use-macro="layout.global_macros['properties_filter_form']"></div>
        </div>

        <div class="large-10 columns datagrid" id="instances" ng-controller="InstancesCtrl" ng-init="getInstances()">
            <div class="row sort-search" ng-cloak="cloak">
                <div class="small-5 columns">
                    Sort by
                    <a href="#" data-dropdown="sorting-dropdown">
                        <span ng-show="sortBy == '-launch_time'">Launch time <span class="hide-for-small">(most recent first)</span></span>
                        <span ng-show="sortBy == 'instance_name'">Instance name</span>
                    </a>
                    <ul id="sorting-dropdown" class="f-dropdown" data-dropdown-content>
                        <li ng-show="sortBy != 'instance_name'"><a ng-click="sortBy = 'instance_name'">Name</a></li>
                        <li ng-show="sortBy != '-launch_time'">
                            <a ng-click="sortBy = '-launch_time'">Launch time <span class="hide-for-small">(most recent first)</span></a>
                        </li>
                    </ul>
                </div>
                <div class="small-4 columns" class="search-filter">
                    <form class="custom" ng-submit="searchFilterInstances()">
                        <div class="row collapse">
                            <div class="small-10 columns">
                                <input type="search" ng-model="searchFilter" id="search-filter" placeholder="filter..." />
                            </div>
                            <div class="small-2 columns">
                                <button class="button secondary postfix">Go</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="small-3 columns right" ng-show="!instancesLoading" ng-cloak="cloak">
                    {{ instances.length }} <span class="hide-for-small">instances</span> found
                </div>
            </div>
            <div ng-show="instancesLoading">Loading...</div>
            <div class="tile instance" ng-repeat="instance in instances | orderBy: sortBy" ng-cloak="true">
                <div class="header">
                    <strong>{{ instance.instance_name }}</strong>
                    <span class="tiny secondary button dropdown right"
                          data-dropdown="instance-dropdown_{{ $index }}"><i class="fi-widget"></i></span>
                    <ul id="instance-dropdown_{{ $index }}" class="f-dropdown">
                        <li><a href="#">This is a link</a></li>
                        <li><a href="#">This is another</a></li>
                        <li><a href="#">Yet another</a></li>
                    </ul>
                </div>
                <div class="content">
                    <div>{{ instance.instance_id }}</div>
                    <div>{{ instance.availability_zone }}</div>
                    <div>{{ instance.instance_type }}</div>
                    <div>{{ instance.security_group }}</div>
                    <div>{{ instance.launch_time | date:'yyyy/MM/dd HH:mm a' }}</div>
                </div>
                <div class="footer status {{ instance.status | lowercase }}">{{ instance.status }}</div>
            </div>
        </div>
    </div>

</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_url('koala:static/js/pages/instances.js')}"></script>
</div>

</metal:block>

