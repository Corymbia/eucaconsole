<metal:block use-macro="main_template">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_url('koala:static/css/pages/instances.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row">
        <div class="large-3 columns" id="instances-filter">
            <div>&nbsp;</div>
            <h6>Filters</h6>
            <div>&nbsp;</div>
            <form class="custom" id="instances-filter-form">
                <div>
                    Match <input type="radio" name="anyall" value="all" checked="checked"> all
                    <input type="radio" name="anyall" value="any"> any
                </div>
                <input type="text" placeholder="status" />
                <input type="text" placeholder="root device" />
                <input type="text" placeholder="instance type" />
                <input type="text" placeholder="security group" />
                <input type="text" placeholder="availability zone" />
                <input type="text" placeholder="tags (key or value)" />
            </form>
        </div>

        <div class="large-9 columns" id="instances">
            <h3>Instances</h3>
            <div class="tile instance" tal:repeat="instance instances">
                <div class="header">
                    <strong>${instance.instance_name}</strong>
                    <span class="tiny secondary button dropdown right"
                          data-dropdown="instance-dropdown_${repeat.instance.index}"><i class="fi-widget"></i></span>
                    <ul id="instance-dropdown_${repeat.instance.index}" class="f-dropdown">
                        <li><a href="#">This is a link</a></li>
                        <li><a href="#">This is another</a></li>
                        <li><a href="#">Yet another</a></li>
                    </ul>
                </div>
                <div class="content">
                    <div>${instance.instance_id}</div>
                    <div>${instance.availability_zone}</div>
                    <div>${instance.instance_type}</div>
                    <div>${instance.security_group}</div>
                    <div>${instance.created_date}</div>
                </div>
                <div class="footer status ${instance.status.lower()}">${instance.status}</div>
            </div>
        </div>
    </div>

</div>
</metal:block>
