<metal:block use-macro="main_template">

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap">
        <h3 class="header" id="pagetitle">
            <a class="back-arrow" href="${request.route_url('images')}"
               data-tooltip="" title="Back to images" i18n:attributes="title">&lt;</a>
            <span i18n:translate="">Images</span> ${image.id if image else ''}
        </h3>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']"></metal:block>

        <div class="large-7 columns"
            tal:define="image_tags image.tags if image else {};
                                readonly True if image else False;">
            <div class="panel has-title">
                <h6 class="title">
                    <span tal:condition="image">
                        <span i18n:translate="">Properties of image</span>
                        <strong>${image.id }</strong>
                    </span>
                    <span tal:condition="not image" i18n:translate="">
                        Error 
                    </span>
                </h6>
                <form action="${request.route_url('image_update', id=image.id)}" method="post" data-abide="abide"> 
                    ${structure:image_form['csrf_token']}
                    <div tal:condition="image">
                        <div class="panel has-title">
                            <h6 class="title" i18n:translate="">Machine</h6>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Name</label></div>
                                <div class="small-9 columns value">${image.name if image.name else ''}</div>
                            </div>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Owner Alias</label></div>
                                <div class="small-9 columns value">${image.owner_alias if image.owner_alias else ''}</div>
                            </div>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Platform</label></div>
                                <div class="small-9 columns value">${image.platform if image.platform else ''}</div>
                            </div>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Architecture</label></div>
                                <div class="small-9 columns value">${image.architecture if image.architecture else ''}</div>
                            </div>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Root Device Type</label></div>
                                <div class="small-9 columns value">${image.root_device_type if image.root_device_type else ''}</div>
                            </div>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Root Device Name</label></div>
                                <div class="small-9 columns value">${image.root_device_name if image.root_device_name else ''}</div>
                            </div>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Manifest Path</label></div>
                                <div class="small-9 columns value">${image.location if image.location else ''}</div>
                            </div>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Description</label></div>
                                <div class="small-9 columns value">${image.description if image.description else ''}</div>
                            </div>
                        </div>
                        <div class="panel has-title">
                            <h6 class="title" i18n:translate="">Kernel</h6>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Kernel id</label></div>
                                <div class="small-9 columns value">${image.kernel_id if image.kernel_id else ''}</div>
                            </div>
                        </div>
                        <div class="panel has-title">
                            <h6 class="title" i18n:translate="">RAM disk</h6>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Ramdisk id</label></div>
                                <div class="small-9 columns value">${image.ramdisk_id if image.ramdisk_id else ''}</div>
                            </div>
                        </div>
                        <div class="panel has-title">
                            <h6 class="title" i18n:translate="">Block device mappings</h6>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">Block device map</label></div>
                                <div class="small-9 columns value">${image.block_device_mapping if image.block_device_mapping else ''}</div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    ${panel('tag_editor', tags=image_tags, leftcol_width=3, rightcol_width=9)}
                    <hr>
                    <div class="row">
                        <div class="small-3 columns">&nbsp;</div>
                        <div class="small-9 columns field inline">
                            <button type="submit" class="button">
                                <span tal:condition="image" i18n:translate="">Save changes</span>
                            </button>
                            <a href="${request.route_url('images')}"
                               class="cancel-link" i18n:translate="">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="large-5 columns">
            <div class="panel has-title" tal:condition="image">
                <h6 class="title" i18n:translate="">Other image actions</h6>
                <div class="row">
                    <div class="large-3 columns">&nbsp;</div>
                    <div class="large-9 columns">
                        <a class="button secondary" data-reveal-id="create-launchconfig-modal" i18n:translate="">
                            Create scaling group launch configuration 
                        </a>
                    </div>
                </div>
                <div id="create-launchconfig-modal" class="reveal-modal small" data-reveal="">
                    <h3 i18n:translate="">Use this image to create scaling group launch configuration</h3>
                    <p><span i18n:translate="">Placeholder</span>
                    <b>${image.id}</b>?</p>
                    <form action="${request.route_url('image_view', id=image.id)}" method="post">
                        <button type="submit" class="button" i18n:translate="">Yes</button>
                    </form>
                    <a class="close-reveal-modal">&#215;</a>
                </div>
            </div>
        </div>
    </div>
</div>

</metal:block>

