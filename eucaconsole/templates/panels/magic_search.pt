<!--! Magic Searchbar -->
<div id="magic-search" class="row" ng-app="MagicSearch" i18n:domain="eucaconsole"
     ng-controller="MagicSearchCtrl" ng-init="initSearch('${facets_json}', ${filter_keys})">
    <link rel="stylesheet" href="${request.static_path('eucaconsole:static/css/widgets/magic_search.css')}"
          type="text/css" charset="utf-8" />
     <div class="small-12 columns">
        <div class="search-bar">
            <i class="fi-magnifying-glass go"></i>
            <div class="items">
                <span class="label radius secondary facetentry"
                      ng-repeat="facet in currentSearch" ng-cloak="cloak">
                    <span>
                        {{ facet.label[0] }}:<b>{{ facet.label[1] }}</b>
                    </span>
                    <a class="remove" ng-click="removeFacet($index, $event)"
                       title="Remove facet" i18n:translate="title"><i class="fi-x"></i></a>
                </span>
            </div>
            <input id="search-input" type="text" data-dropdown="facet-drop" placeholder="Select facets for filter, or enter text to search" i18n:translate="placeholder"></input>
            <ul id="facet-drop" class="f-dropdown" data-dropdown-content="">
                <li ng-repeat="facet in facetsObj" ng-show="!facetSelected">
                    <a ng-click="facetClicked($index, $event, facet.name)">{{ facet.label }}</a>
                </li>
                <li ng-repeat="option in facetOptions" ng-show="facetSelected">
                    <a ng-click="optionClicked($index, $event, option.key)">{{ option.label }}</a>
            </ul>
            <a ng-click="clearSearch()" title="Clear search" i18n:translate="title"><i class="fi-x cancel"></i></a>
        </div>
    </div>
    <script src="${request.static_path('eucaconsole:static/js/widgets/magic_search.js')}"></script>
</div>
