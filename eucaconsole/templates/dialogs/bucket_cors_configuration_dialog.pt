<!--! Modal dialog for S3 bucket CORS configuration -->
<div tal:omit-tag="" i18n:domain="eucaconsole">
    <h3>
        <span ng-if="hasCorsConfig"
              i18n:translate="">Edit CORS Configuration</span>
        <span ng-if="!hasCorsConfig"
              i18n:translate="">Add CORS Configuration</span>
    </h3>
    <form id="cors-configuration-form" method="post"
          ng-submit="setCorsConfiguration($event)">
        <div id="sample-link-wrapper">
            <a href="https://docs.aws.amazon.com/AmazonS3/latest/dev/cors.html#how-do-i-enable-cors"
                target="_blank" i18n:translate="">Sample CORS Configurations</a>
        </div>
        <textarea name="cors_configuration_xml" title="Edit CORS Configuration"
                  ng-if="hasCorsConfig">{{ corsConfigXml }}</textarea>
        <textarea name="cors_configuration_xml" title="Add CORS Configuration"
                  ng-if="!hasCorsConfig">{{ sampleCorsConfig }}</textarea>
        <p class="cors-error-wrapper">{{corsError}}</p>
        <button class="expand" i18n:translate="" ng-if="!savingCorsConfig">
            Save CORS Configuration
        </button>
        <button class="expand" disabled="disabled" ng-if="savingCorsConfig">
            <span i18n:translate="">Saving CORS Configuration</span>&nbsp;
            <span class="busy"></span>
        </button>
    </form>
</div>
