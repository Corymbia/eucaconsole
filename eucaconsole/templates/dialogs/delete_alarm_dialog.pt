<!--! Delete Alarm Dialog -->
<div id="delete-alarm-wrapper">
    <div id="delete-alarm-modal" class="reveal-modal ${modal_size}" data-reveal="">
        <a class="close-reveal-modal" href="#">&#215;</a>
        <h3 ng-if="alarms.length == 1" i18n:translate="">Delete Alarm</h3>
        <h3 ng-if="alarms.length > 1" i18n:translate="">Delete Alarms</h3>
        <div class="row">
            <p ng-if="alarms.length == 1" i18n:translate="">Are you sure you want to delete the following alarm?</p>
            <p ng-if="alarms.length > 1" i18n:translate="">Are you sure you want to delete the following alarms?</p>
        </div>
        <div class="row control" ng-show="alarms.length > 1">
            <a ng-click="toggleAlarmsDisplay()" class="show-dimensions" ng-class="{'open': deleteAlarmsExpanded}">
                <i class="fa fa-plus-circle"></i>
                <i class="fa fa-minus-circle"></i>
                {{ alarms.length }} alarms
            </a>
        </div>
        <div class="row" ng-show="alarms.length == 1 || deleteAlarmsExpanded">
            <div class="row header">
                <div class="large-4 columns">
                    Alarm Name
                </div>
                <div class="large-8 columns">
                    Dimensions
                </div>
            </div>
            <div class="row alarm-dimensions" ng-repeat="alarm in alarms">
                <div class="large-4 columns">
                    {{ alarm.name }}
                </div>
                <div class="large-8 columns">
                    <div ng-repeat="(key, vals) in alarm.dimensions">
                        <div ng-repeat="val in vals">
                            {{ key }} = {{ val }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row buttons">
            <button id="delete-alarm-btn" class="button expand" data-service-path="${service_path}"
                ng-click="deleteAlarm($event)" i18n:translate="">
                <span ng-if="alarms.length == 1">Yes, Delete Alarm</span>
                <span ng-if="alarms.length > 1">Yes, Delete {{ alarms.length }} Alarms</span>
            </button>
        </div>
    </div>
</div>
