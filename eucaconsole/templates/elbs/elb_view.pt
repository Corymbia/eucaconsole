<metal:block use-macro="main_template" i18n:domain="eucaconsole">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_path('eucaconsole:static/css/pages/elb.css')}" />
    <link rel="stylesheet" type="text/css" href="${request.static_path('eucaconsole:static/css/pages/elb_wizard.css')}" />
</head>

<div metal:fill-slot="main_content">
    <div class="row" id="contentwrap" ng-app="ELBPage" ng-controller="ELBPageCtrl"
        ng-init="initController('${controller_options_json}')">
        <metal:breadcrumbs metal:use-macro="layout.global_macros['breadcrumbs']">
            <metal:crumbs metal:fill-slot="crumbs">
                <li><a href="${request.route_path('elbs')}" i18n:translate="">Load balancers</a></li>
                <li class="current"><a href="#">${elb_name}</a></li>
            </metal:crumbs>
        </metal:breadcrumbs>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />
        <h3 id="pagetitle">
            <strong i18n:translate="">Details for load balancer:</strong>
            <em>${elb_name}</em>
        </h3>
        <div class="large-8 columns">
            <form action="" id="elb-view-form"
                method="post" data-abide="abide" enctype="multipart/form-data">
                ${structure:elb_form['csrf_token']}
                <dl id="elb-view-tabs" class="tabs" data-tab="" ng-cloak="">
                    <dd class="active"><a href="#general-tab" ng-click="clickTab($event, 'general-tab')" i18n:translate="">General</a></dd>
                    <dd><a href="#monitoring-tab" ng-click="clickTab($event, 'monitoring-tab')" i18n:translate="">Monitoring</a></dd>
                    <dd><a href="#instances-tab" ng-click="clickTab($event, 'instances-tab')" i18n:translate="">Instances</a></dd>
                    <dd><a href="#health-checks-tab" ng-click="clickTab($event, 'health-checks-tab')" i18n:translate="">Health checks</a></dd>
                </dl>
                <div class="tabs-content">
                    <!--! Step 1: General tab content -->
                    <div class="content active panel has-actions" id="general-tab"
                        tal:define="idle_timeout_attrs {'class': 'timeout-field'};">
                        <metal:block metal:use-macro="layout.global_macros['actions_menu']" tal:condition="elb">
                            <metal:actions metal:fill-slot="actions">
                                <li>
                                    <a id="delete-elb-action" data-reveal-id="delete-elb-modal"
                                        i18n:translate="">Delete load balancer</a>
                                </li>
                            </metal:actions>
                        </metal:block>
                        <h6 i18n:translate="">Load balancer</h6>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Name</label></div>
                            <div class="small-9 columns value">${elb_name}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">DNS name</label></div>
                            <div class="small-9 columns value">${elb.dns_name}</div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Creation time</label></div>
                            <div class="small-9 columns value" ng-cloak="">
                                {{ '${elb_created_time}' | date: '${layout.angular_date_format}' }}
                            </div>
                        </div>
                        <div class="row controls-wrapper readonly">
                            <div class="small-3 columns"><label i18n:translate="">Source security group</label></div>
                            <div class="small-9 columns value">${elb.source_security_group.name}</div>
                        </div>
                        ${panel('form_field', field=elb_form['idle_timeout'], leftcol_width=3, rightcol_width=9, **idle_timeout_attrs)}
                        <hr />
                        <div>
                            ${panel('elb_listener_editor', listener_list=listener_list, protocol_list=protocol_list)}
                        </div>
                        <hr />
                        <div>
                            ${panel('tag_editor', show_name_tag=True)}
                        </div>
                        <div tal:condition="is_vpc_supported and elb_vpc_network is not 'None'"
                                tal:define="security_group_attrs {'data-placeholder': security_group_placeholder_text};">
                            <hr />
                            <h6 i18n:translate="">Network & security</h6>
                            <div class="row controls-wrapper readonly">
                                <div class="small-3 columns"><label i18n:translate="">VPC network</label></div>
                                <div class="small-9 columns value">${elb_vpc_network}</div>
                            </div>
                            ${panel('form_field', field=elb_form['securitygroup'], leftcol_width=3, rightcol_width=9, ng_attrs={'model': 'securityGroups'}, **security_group_attrs)}
                        </div>
                        <hr />
                        <div id="save-changes-button">
                            <div class="row controls-wrapper">
                                <div class="small-6 columns"></div>
                                <div class="small-6 columns value right">
                                    <a href="${request.route_path('elbs')}" id="cancel-update-link"
                                        class="cancel-link" i18n:translate="">Cancel</a>
                                    <button type="submit" class="button" id="save-changes-btn"
                                        ng-click="submitSaveChanges($event)" ng-disabled="isNotChanged">
                                        <span i18n:translate="">Save Changes</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--! Step 2: Monitoring tab content -->
                    <div class="content panel has-actions" id="monitoring-tab">
                        <metal:block metal:use-macro="layout.global_macros['actions_menu']" tal:condition="elb">
                            <metal:actions metal:fill-slot="actions">
                                <li>
                                    <a id="delete-elb-action" data-reveal-id="delete-elb-modal"
                                        i18n:translate="">Delete load balancer</a>
                                </li>
                            </metal:actions>
                        </metal:block>
                        Monitoring Tab
                    </div>
                    <!--! Step 3: Instances tab content -->
                    <div class="content panel has-actions" id="instances-tab">
                        <metal:block metal:use-macro="layout.global_macros['actions_menu']" tal:condition="elb">
                            <metal:actions metal:fill-slot="actions">
                                <li>
                                    <a id="delete-elb-action" data-reveal-id="delete-elb-modal"
                                        i18n:translate="">Delete load balancer</a>
                                </li>
                            </metal:actions>
                        </metal:block>
                        <div ng-cloak="true">
                            <div>
                                <label class="section-label">
                                    <span i18n:translate="">
                                        Instances
                                    </span>
                                </label>
                            </div>
                            <div ng-app="MagicSearch">
                                <magic-search
                                    template="${request.static_path('eucaconsole:static/js/thirdparty/magic-search/magic_search.html')}"
                                    strings="{'remove':'${layout.searchtext_remove}',
                                              'cancel':'${layout.searchtext_cancel}',
                                              'prompt':'${layout.searchtext_prompt}'}"
                                    facets="${search_facets}"
                                    filter-keys="${filter_keys}">
                                </magic-search>
                            </div>
                            <div>
                                 <instance-selector
                                     template="${request.static_path('eucaconsole:static/html/directives/instance_selector.html')}"
                                     options='${controller_options_json}'>
                                 </instance-selector>
                            </div>
                        </div>
                    </div>
                    <!--! Step 4: Health checks tab content -->
                    <div class="content panel has-actions" id="health-checks-tab"
                        tal:define="ping_path_attrs {'class': 'text-input'};
                                    ping_protocol_attrs {'class': 'ip-protocol'};
                                    ping_delay_attrs {'class': 'ping-delay'};
                                    ping_threshold_attrs {'class': 'ping-threshold'};">
                        <metal:block metal:use-macro="layout.global_macros['actions_menu']" tal:condition="elb">
                            <metal:actions metal:fill-slot="actions">
                                <li>
                                    <a id="delete-elb-action" data-reveal-id="delete-elb-modal"
                                        i18n:translate="">Delete load balancer</a>
                                </li>
                            </metal:actions>
                        </metal:block>
                        <div ng-cloak="true">
                            <h6 i18n:translate="">Ping settings</h6>
                            <div class="">
                                ${panel('form_field', field=elb_form['ping_protocol'], rightcol_width=12, stack_label=True, ng_attrs={'model': 'pingProtocol'}, **ping_protocol_attrs)}
                            </div>
                            <div class="">
                                ${panel('form_field', field=elb_form['ping_port'], rightcol_width=12, stack_label=True, min=1, max=65535, maxlength=5, ng_attrs={'model': 'pingPort'}, pattern=layout.integer_gt_zero_pattern)}
                            </div>
                            <div class="" ng-show="pingProtocol === 'HTTP' || pingProtocol === 'HTTPS'">
                                ${panel('form_field', field=elb_form['ping_path'], ng_attrs={'model': 'pingPath'}, rightcol_width=12, stack_label=True, **ping_path_attrs)}
                            </div>
                        </div>
                        <div class="expando" id="advanced-section" ng-cloak="" ng-init="expanded = false">
                            <div class="title">
                                <a ng-click="expanded = !expanded">
                                    <i class="fi-plus" ng-show="!expanded"></i>
                                    <i class="fi-minus" ng-show="expanded"></i>
                                    &nbsp;<span i18n:translate="">Advanced</span>
                                </a>
                            </div>
                            <div class="section columns" ng-show="expanded">
                                <div ng-cloak="true">
                                    <h6 i18n:translate="">Timing settings</h6>
                                    <div class="">
                                        ${panel('form_field', field=elb_form['response_timeout'], rightcol_width=12, stack_label=True,  min=1, ng_attrs={'model': 'responseTimeout'}, pattern=layout.integer_gt_zero_pattern)}
                                    </div>
                                    <div class="">
                                        ${panel('form_field', field=elb_form['time_between_pings'], rightcol_width=12, stack_label=True, ng_attrs={'model': 'timeBetweenPings'}, **ping_delay_attrs)}
                                    </div>
                                </div>
                                <div ng-cloak="true">
                                    <h6 i18n:translate="">Instance thresholds</h6>
                                    <div class="">
                                        ${panel('form_field', field=elb_form['failures_until_unhealthy'], rightcol_width=12, stack_label=True, ng_attrs={'model': 'failuresUntilUnhealthy'}, **ping_threshold_attrs)}
                                    </div>
                                    <div class="">
                                        ${panel('form_field', field=elb_form['passes_until_healthy'], rightcol_width=12, stack_label=True, ng_attrs={'model': 'passesUntilHealthy'}, **ping_threshold_attrs)}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="save-changes-button">
                            <div class="row controls-wrapper">
                                <div class="small-6 columns"></div>
                                <div class="small-6 columns value right">
                                    <a href="${request.route_path('elbs')}" id="cancel-update-link"
                                        class="cancel-link" i18n:translate="">Cancel</a>
                                    <button type="submit" class="button" id="save-changes-btn"
                                        ng-click="submitSaveChanges($event)" ng-disabled="isNotChanged">
                                        <span i18n:translate="">Save Changes</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="large-4 columns">
            <metal:block metal:use-macro="layout.global_macros['help_expando']" />
            <div class="help-content" ng-show="isHelpExpanded" ng-cloak="">
                <!--! Help goes here -->
                <div id="help-html-console_edit_launch_config"
                    ng-include="'${layout.help_path('console_edit_launch_config.html')}'">
                </div> 
            </div>
        </div>
        <!--! Modal dialogs -->
        ${panel('elb_dialogs', elb=elb, in_use=in_use, delete_form=delete_form)}
    </div>
</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_path('eucaconsole:static/js/thirdparty/jquery/chosen.jquery.min.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/pages/elb.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/thirdparty/magic-search/magic_search.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/widgets/instance_selector.js')}"></script>
</div>

</metal:block>

