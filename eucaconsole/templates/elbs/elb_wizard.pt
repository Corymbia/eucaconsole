<metal:block use-macro="main_template" i18n:domain="eucaconsole">

<head metal:fill-slot="head_css">
    <link rel="stylesheet" type="text/css" href="${request.static_path('eucaconsole:static/css/pages/elb_wizard.css')}" />
    <link rel="stylesheet" type-"text/css" href="${request.static_path('eucaconsole:static/js/thirdparty/magic-search/magic_search.css')}"/>
</head>

<div metal:fill-slot="main_content" ng-app="Wizard" ng-controller="WizardCtrl" ng-init="initController('elb', 4)">
    <div class="row" id="contentwrap" ng-controller="ELBWizardCtrl" ng-init="initController('${controller_options_json}')">
        <metal:breadcrumbs metal:use-macro="layout.global_macros['breadcrumbs']">
            <metal:crumbs metal:fill-slot="crumbs">
                <li><a href="${request.route_path('elbs')}" i18n:translate="">ELBs</a></li>
                <li class="current"><a href="#" i18n:translate="">Create ELB</a></li>
            </metal:crumbs>
        </metal:breadcrumbs>
        <!-- Notifications -->
        <metal:block metal:use-macro="layout.global_macros['notifications']" />
        <h3 id="pagetitle">
            <strong i18n:translate="">Create new elastic load balancer</strong>
        </h3>
        <div class="large-8 columns">
            <div class="wizard no-title">
                <form action="${request.route_path('elb_create')}" id="elb-form"
                      method="post" data-abide="abide" enctype="multipart/form-data">
                    ${structure:create_form['csrf_token']}
                    <dl id="wizard-tabs" class="tabs" data-tab="" ng-cloak="">
                        <dd class="">
                            <a id="tabStep1" ng-click="visitNextStep($event, 1)" href="#step1">
                                <span class="cir">1</span>
                                <b>General</b>
                            </a>
                        </dd>
                        <dd ng-class="{disabled: invalidSteps[0]}">
                            <a id="tabStep2" ng-click="visitNextStep($event, 2)"
                               href="#step2" ng-hide="invalidSteps[0]">
                                <span class="cir">2</span>
                                <b>Network</b>
                            </a>
                            <span ng-show="invalidSteps[0]">
                                <span class="cir">2</span>
                                <b>Network</b>
                            </span>
                        </dd>
                        <dd ng-class="{disabled: invalidSteps[1]}">
                            <a id="tabStep3" ng-click="visitNextStep($event, 3)"
                               href="#step3" ng-hide="invalidSteps[1]">
                                <span class="cir">3</span>
                                <b>Instances</b>
                            </a>
                            <span ng-show="invalidSteps[1]">
                                <span class="cir">3</span>
                                <b>Instances</b>
                            </span>
                        </dd>
                        <dd ng-class="{disabled: invalidSteps[2]}">
                            <a id="tabStep4" ng-click="visitNextStep($event, 4)"
                               href="#step4" ng-hide="invalidSteps[2]">
                                <span class="cir">4</span>
                                <b>Health Check</b>
                            </a>
                            <span ng-show="invalidSteps[2]">
                                <span class="cir">4</span>
                                <b>Health Check</b>
                            </span>
                        </dd>
                    </dl>
                    <div class="tabs-content">
                        <!--! Step 1: General tab content -->
                        <div class="content" ng-class="stepClasses[0]" id="step1"
                            tal:define="html_attrs_val {'pattern': '^[a-zA-Z0-9\-]{1,255}$'};">
                            <div ng-cloak="true">
                                <label>General</label>
                                ${panel('form_field', field=create_form['name'], leftcol_width=3, rightcol_width=9, ng_attrs={'model': 'elbName'}, **html_attrs_val)}
                            </div>
                            <div>
                                <elb-listener-editor
                                    template="${request.static_path('eucaconsole:static/html/directives/elb_listener_editor.html')}"
                                    options='${controller_options_json}'>
                                </elb-listener-editor>
                                 <span id="hidden_certificate_arn_input_span" class="hide" i18n:translate="">
                                     <input type='hidden' id="hidden_certificate_arn_input" name='certificate_arn'/> 
                                 </span>
                            </div>
                            <hr />
                            <div>
                                <label>
                                    <span class="req">*</span>
                                    <span i18n:translate="">Required fields</span>
                                </label>
                            </div>
                            <div class="row">
                                <div class="small-3 columns">&nbsp;</div>
                                <div class="small-9 columns field inline">
                                    <a id="visit-step-2" class="button small round" ng-click="visitNextStep($event, 2)" ng-disabled="isValidationError">
                                        <span i18n:translate="">Next</span>
                                    </a>
                                    <a href="${request.route_path('elbs')}"
                                       class="cancel-link" i18n:translate="">Cancel</a>
                                </div>
                            </div>
                        </div>
                        <!--! Step 2: Network tab content -->
                        <div class="content" ng-class="stepClasses[1]" id="step2"
                            tal:define="security_group_attrs {'data-placeholder': security_group_placeholder_text};">
                            <div ng-cloak="true">
                                <label>Network</label>
                                ${panel('form_field', field=create_form['vpc_network'], ng_attrs={'model': 'vpcNetwork'}, leftcol_width=4, rightcol_width=8)}
                            </div>
                            <div ng-cloak="true" ng-show="vpcNetwork !== 'None'">
                                ${panel('form_field', field=create_form['securitygroup'], leftcol_width=4, rightcol_width=8, ng_attrs={'model': 'securityGroups', 'options': 'k as v for (k, v) in securityGroupChoices'}, **security_group_attrs)}
                            </div>
                            <hr />
                            <div>
                                <label>
                                    <span class="req">*</span>
                                    <span i18n:translate="">Required fields</span>
                                </label>
                            </div>
                            <div class="row">
                                <div class="small-3 columns">&nbsp;</div>
                                <div class="small-9 columns field inline">
                                    <a id="visit-step-3" class="button small round" ng-click="visitNextStep($event, 3)" ng-disabled="isValidationError">
                                        <span i18n:translate="">Next</span>
                                    </a>
                                    <a href="${request.route_path('elbs')}"
                                       class="cancel-link" i18n:translate="">Cancel</a>
                                </div>
                            </div>
                        </div>
                        <!--! Step 3: Instances tab content -->
                        <div class="content" ng-class="stepClasses[2]" id="step3"> 
                            <div ng-cloak="true" ng-show="vpcNetwork === 'None'">
                                <label>Add availability zones</label>
                                ${panel('form_field', field=create_form['zone'], leftcol_width=3, rightcol_width=9, ng_attrs={'model': 'availabilityZones'})}
                            </div>
                            <div ng-cloak="true" ng-show="vpcNetwork === 'None'">
                                ${structure:create_form.cross_zone_enabled(**{'ng-model': 'crossZoneEnabled'})}
                                ${create_form['cross_zone_enabled'].label}
                            </div>
                            <div ng-cloak="true" ng-show="vpcNetwork !== 'None'">
                                <label>Add VPC subnets</label>
                                ${panel('form_field', field=create_form['vpc_subnet'], leftcol_width=4, rightcol_width=8, ng_attrs={'model': 'vpcSubnet', 'options': 'k as v for (k, v) in vpcSubnetChoices'})}
                                 <span id="hidden_vpc_subnet_empty_option" class="hide" i18n:translate="">No subnets found</span>
                            </div>
                            <div ng-cloak="true">
	                        <label>Add instances</label>
                                <div ng-app="MagicSearch">
                                    <magic-search template="${request.static_path('eucaconsole:static/js/thirdparty/magic-search/magic_search.html')}"

                                        strings="{'remove':'${layout.searchtext_remove}', 'cancel':'${layout.searchtext_cancel}', 'prompt':'${layout.searchtext_prompt}'}" facets="${search_facets}" filter-keys="${filter_keys}"></magic-search>
                                </div>
                                <div>
                                     <instance-selector
                                         template="${request.static_path('eucaconsole:static/html/directives/instance_selector.html')}"
                                         options='${controller_options_json}'>
                                     </instance-selector>
                                </div>
                            </div>
                            <hr />
                            <div>
                                <label>
                                    <span class="req">*</span>
                                    <span i18n:translate="">Required fields</span>
                                </label>
                            </div>
                            <div class="row">
                                <div class="small-3 columns">&nbsp;</div>
                                <div class="small-9 columns field inline">
                                    <a id="visit-step-4" class="button small round" ng-click="visitNextStep($event, 4)" ng-disabled="isValidationError">
                                        <span i18n:translate="">Next</span>
                                    </a>
                                    <a href="${request.route_path('elbs')}"
                                       class="cancel-link" i18n:translate="">Cancel</a>
                                </div>
                            </div>
                        </div>
                        <!--! Step 4: Health Check tab content -->
                        <div class="content" ng-class="stepClasses[3]" id="step4">
                            <div ng-cloak="true">
                                <span i18n:translate="">Your load balancer will monitor the health of its instances based on the following health check.</span>
                                <span i18n:translate="">Instances that fail the health check will be removed from the load balancer.</span>
                            </div>
                            <div ng-cloak="true">
                                <label>Ping settings</label>
                                <div class="">
                                    ${panel('form_field', field=create_form['ping_protocol'], leftcol_width=3, rightcol_width=9, ng_attrs={'model': 'pingProtocol'})}
                                </div>
                                <div class="">
                                    ${panel('form_field', field=create_form['ping_port'], leftcol_width=3, rightcol_width=9, min=1, max=65535, maxlength=5, ng_attrs={'model': 'pingPort'}, pattern=layout.integer_gt_zero_pattern)}
                                </div>
                                <div class="">
                                    ${panel('form_field', field=create_form['ping_path'], leftcol_width=3, rightcol_width=9)}
                                </div>
                            </div>
                            <div class="expando" id="advanced-section" ng-cloak="" ng-init="expanded = false">
                                <div class="title">
                                    <a ng-click="expanded = !expanded">
                                        <i class="fi-plus" ng-show="!expanded"></i>
                                        <i class="fi-minus" ng-show="expanded"></i>
                                        &nbsp;<span i18n:translate="">Advanced</span>
                                    </a>
                                </div>
                                <div>&nbsp;</div>
                                <div class="section columns" ng-show="expanded">
                                    <div ng-cloak="true">
                                        <label>Timing settings</label>
                                        <div class="">
                                            ${panel('form_field', field=create_form['response_timeout'], leftcol_width=3, rightcol_width=9, min=1, ng_attrs={'model': 'responseTimeout'}, pattern=layout.integer_gt_zero_pattern)}
                                        </div>
                                        <div class="">
                                            ${panel('form_field', field=create_form['time_between_pings'], leftcol_width=3, rightcol_width=9, ng_attrs={'model': 'timeBetweenPings'})}
                                        </div>
                                    </div>
                                    <div ng-cloak="true">
                                        <label>Instance thresholds</label>
                                        <div class="">
                                            ${panel('form_field', field=create_form['failures_until_unhealthy'], leftcol_width=3, rightcol_width=9, ng_attrs={'model': 'failuresUntilUnhealthy'})}
                                        </div>
                                        <div class="">
                                            ${panel('form_field', field=create_form['passes_until_unhealthy'], leftcol_width=3, rightcol_width=9, ng_attrs={'model': 'passesUntilUnhealthy'})}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr/>
                            <div>
                                <label>
                                    <span class="req">*</span>
                                    <span i18n:translate="">Required fields</span>
                                </label>
                            </div>
                            <div class="row">
                                <div class="small-3 columns">&nbsp;</div>
                                <div class="small-9 columns field inline">
                                    <button type="submit" class="button" ng-click="createELB()" id="create-elb-btn-step4" ng-disabled="isValidationError">
                                        <span i18n:translate="">Create Elastic Load Balancer</span>
                                    </button>
                                    <a href="${request.route_path('elbs')}"
                                       class="cancel-link" i18n:translate="">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                </form>
            </div>
        </div>
        <div class="large-4 columns">
            <div class="help-padding">&nbsp;</div>
            <div class="summary" ng-cloak="">
                <h5 i18n:translate="" class="title">Summary</h5>
                <div class="section" ng-show="summaryDisplays[0]">
                    <div class="row">
                        <div class="small-4 columns"><label i18n:translate="" class="right">Name:</label></div>
                        <div class="small-8 columns value">{{ elbName }}</div>
                    </div>
                </div>
                <div class="section" ng-show="summaryDisplays[1]">
                    <div class="row">
                        <div class="small-4 columns"><label i18n:translate="" class="right">VPC Network:</label></div>
                        <div class="small-8 columns value"></div>
                    </div>
                </div>
                <div class="section" ng-show="summaryDisplays[2]">
                    <div class="row">
                        <div class="small-4 columns"><label i18n:translate="" class="right">Availablity Zones:</label></div>
                        <div class="small-8 columns value"></div>
                    </div>
                </div>
                <div class="section" ng-show="summaryDisplays[3]">
                    <div class="row">
                        <div class="small-4 columns"><label i18n:translate="" class="right">Protocol:</label></div>
                        <div class="small-8 columns value"></div>
                    </div>
                </div>
            </div>
            <div>
                <metal:block metal:use-macro="layout.global_macros['help_expando']" />
                <div class="help-content" ng-show="isHelpExpanded" ng-cloak="">
                    <!-- HELP CONTENT -->
                    <div id="help-html-console_create_elb" ng-include="'${layout.help_path('console_create_elb.html')}'"></div> 
                </div>
            </div>
        </div>
        <!--! Modal dialogs -->
        ${panel('select_certificate_dialog', certificate_form=certificate_form)}
    </div>
</div>

<div metal:fill-slot="tail_js">
    <script src="${request.static_path('eucaconsole:static/js/thirdparty/jquery/chosen.jquery.min.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/thirdparty/utils/purl.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/pages/wizard.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/pages/elb_wizard.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/widgets/elb_listener_editor.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/thirdparty/magic-search/magic_search.js')}"></script>
    <script src="${request.static_path('eucaconsole:static/js/widgets/instance_selector.js')}"></script>
</div>

</metal:block>

